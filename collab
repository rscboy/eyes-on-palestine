    <script>
        document.getElementById('submissionForm').addEventListener('submit', function(event) {
            // Stop the form from submitting normally
            event.preventDefault();

            // Get values from the form
            const title = document.getElementById('title').value;
            const link = document.getElementById('link').value;
            const source = document.getElementById('source').value;
            const date = document.getElementById('date').value;
            const category = document.getElementById('category').value;
            const summary = document.getElementById('summary').value;
            const imageUrl = document.getElementById('imageUrl').value;

            // --- Build the GitHub Issue Title ---
            // Format: [Source] Title
            const issueTitle = `[${source}] ${title}`;

            // --- Build the GitHub Issue Body ---
            
            // 1. Assign values or placeholders for the JSON
            const summaryValue = summary || "<neutral summary>";
            const imageUrlValue = imageUrl || "<mapped or placeholder>";

            // 2. Create the JSON object
            const articleData = {
                date: date,
                title: title,
                summary: summaryValue,
                link: link,
                imageUrl: imageUrlValue,
                category: category,
                categoryColor: "<color>", // Placeholder as requested
                source: source
            };

            // 3. Stringify the JSON with 2-space indentation
            const jsonString = JSON.stringify(articleData, null, 2);

            // 4. Create the issue body with the JSON in a Markdown code block
            let issueBody = `
**Submission for "Echoes of Gaza"**

Please copy and paste the JSON block below to add the new article.

\`\`\`json
${jsonString}
\`\`\`

---
**Quick Reference:**
- **Submitted URL:** ${link}
`;

            // This is the base URL for new issues in your repository
            const githubUrl = 'https://github.com/rscboy/eyes-on-palestine/issues/new';

            // Encode the title and body to be safely put in a URL
            const encodedTitle = encodeURIComponent(issueTitle);
            const encodedBody = encodeURIComponent(issueBody);

            // Create the final URL
            const finalUrl = `${githubUrl}?title=${encodedTitle}&body=${encodedBody}`;

            // Open the GitHub issue page in a new tab
            window.open(finalUrl, '_blank');
        });
    </script>

</body>
